{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "supertest"],
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  "moduleResolution": "node",
  "ignoreDeprecations": "6.0",
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
